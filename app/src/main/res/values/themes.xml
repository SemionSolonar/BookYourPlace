<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookYourPlace" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="date_dialog_theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent_color</item>                   <!--header background-->
        <item name="android:windowBackground">@color/background_color</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/accent_color</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/white</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/white</item>    <!--days of the week-->
    </style>

    <style name="custom_headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/archivo_bold</item>
        <item name="android:textColor">@color/primary_white</item>
    </style>

    <style name="popupMenuStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:popupBackground">@drawable/background_popup_menu</item>
    </style>

    <style name="custom_caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/archivo_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
    </style>

</resources>